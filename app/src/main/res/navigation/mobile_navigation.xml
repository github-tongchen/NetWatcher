<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.tongchen.netwatcher.ui.home.HomeFragment"
        android:label="@string/app_title_home"
        tools:layout="@layout/app_fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.tongchen.netwatcher.ui.dashboard.DashboardFragment"
        android:label="@string/app_title_dashboard"
        tools:layout="@layout/app_fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.tongchen.netwatcher.ui.notifications.NotificationsFragment"
        android:label="@string/app_title_notifications"
        tools:layout="@layout/app_fragment_notifications" />
